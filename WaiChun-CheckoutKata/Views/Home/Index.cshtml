@{
    ViewData["Title"] = "Home Page";
}

@model WaiChun_CheckoutKata.Models.ItemSKUViewModel
@using WaiChun_CheckoutKata.Models


<h1>
    Item
</h1>

@if (Model.ItemSKUList != null)
{
    <div class="container" id="itemskulist">
        <div class="row">
            <div class="col-sm" o>
                Item Name
            </div>
            <div class="col-sm">
                Unit Price
            </div>
            <div class="col-sm">
                Quantity
            </div>
            <div class="col-sm">
            </div>
        </div>
        @foreach (ItemSKUModel itemSKU in Model.ItemSKUList)
        {
            <div class="row border">
                <div class="col-sm mt-2">
                    <label id="lbl_@itemSKU.ItemSKU">@itemSKU.ItemSKU</label>
                </div>
                <div class="col-sm mt-2">
                    @itemSKU.UnitPrice
                </div>
                <div class="col-sm mt-2">
                    @Html.DropDownList(@itemSKU.ItemSKU + "Quantity", new SelectList(itemSKU.ItemQuantity), "Select Quantity")
                </div>
                <div class="col-sm mt-2">
                    <button type="submit" value="@itemSKU.ItemID" class="btn btn-info mb-2" onclick="AddtoBasket('@itemSKU.ItemSKU');" id="btn_@itemSKU.ItemSKU">Add</button>
                </div>
            </div>
        }
    </div>

    <br />
    <br />
    <hr />
    <h1>
        basket
    </h1>
    <div class="container" id="BasketItemDiv">
        <div class="row">
            <div class="col-sm">Item Name</div>
            <div class="col-sm">Quantity</div>
        </div>
    </div>
    <button class="btn btn-info mb-2" onclick="">Check Out</button>
    <br />
    <br />
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-4"><h5>Total price</h5></div>
            <div class="col-md-8" id="totalprice">0</div>
        </div>
    </div>
}